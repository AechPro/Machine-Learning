#:kivy 1.0.9

<D3Button@Button>:
    size_hint: .3, .2
    color: 0, 0, 0, 1
    font_size: 32
    bold: True
    background_color: 1, 1, 1, 1

<Display_Object@Screen>:
    FloatLayout:
        background_color: 0, 0.5, 0.5, 1

<Start_Screen@Display_Object>:
    Label:
        text: "D3"
    D3Button:
        text: "New User"
        pos_hint: {'x': 0.1, 'y':0.1}

    D3Button:
        text: "Browse Users"
        pos_hint: {'x':0.6, 'y':0.1}





<CreateUserScreen@Screen>:
    FloatLayout:
        background_color: 0, 0.5, 0.5, 1

        D3Button:
            text: "Back"
            pos_hint: {'x': 0.1, 'y':0.1}

        D3Button:
            text: "Save User"
            pos_hint: {'x':0.6, 'y':0.1}
