    D3Button:
        text: "Save"
        pos_hint: {'x': 0.6, 'y':0.1}
        on_press:
            root.button_press(self.text)
            root.manager.transition.direction = 'right'

<Idle_Screen@Display_Object>:
    Label:
        text: "Image\nPreview"
        size_hint: .2, .2
        pos_hint: {'right':1, 'top':1}
        color: 1,0,1,1
    Label:
        text: "Camera\nFeed"
        pos_hint:{'center_x':0.5,'center_y':0.5}
        color: 0,1,0,1
        font_size: 32

    D3Button:
        text: "Exit"
        size_hint: .2, .1
        pos_hint: {'left':1, 'bottom':1}
        on_press:
            root.button_press(self.text)

    StackLayout:
        orientation: 'bt-rl'
        D3Button:
            size_hint: .2, .1
            text: 'Capture'
